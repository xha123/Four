<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplicationfourweek.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/main_wl_bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络"
            android:layout_centerInParent="true"
            />
        <Button
            android:text="下一页"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_next_tv"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/main_show_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/main_timer_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recy"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:backgroundTint="#6abaf4"
        app:rippleColor="#6a3ccc"
        app:elevation="5dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        />
    <Button
        android:id="@+id/main_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        />
    <Button
        android:id="@+id/main_xy_bu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字母索引"
        />
</LinearLayout>
